/**********
242. Valid Anagram

Given two strings s and t , write a function to determine if t is an anagram of s.

Example 1:
Input: s = "anagram", t = "nagaram"
Output: true

Example 2:
Input: s = "rat", t = "car"
Output: false

Note:
You may assume the string contains only lowercase alphabets.
**********/

//16ms
bool isAnagram(string s, string t) {
    if(s.size()!=t.size())
        return false;
    unordered_map<char, int> count;
    for(int i=0; i<s.size(); i++){
        count[s[i]]++;
    }
    for(int i=0; i<t.size(); i++){
        count[t[i]]--;
    }
    for(auto c: count){
        if(c.second!=0)
            return false;
    }
    return true;
}

//4ms
bool isAnagram(string s, string t) {
    if(s.size() != t.size()) 
        return false;
    vector<int> count(26, 0);
    for(auto c : s) {
        count[c-'a'] += 1;
    }
    for(auto c : t) {
        count[c-'a'] -= 1;
        if(count[c-'a'] < 0) 
            return false;
    }
    return true;
}
